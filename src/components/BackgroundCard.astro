---
const { backgroundMobile, backgroundDesktop, heading, copy, fontColor } =
  Astro.props;
---

<div class="bg-card">
  <img src={backgroundDesktop} alt="" srcset="" />
  <img src={backgroundMobile} alt="" srcset="" />
  <div class="bg-card__text">
    <h4>{heading}</h4>
    <p>{copy}</p>
  </div>
</div>

<style define:vars={{ backgroundMobile, backgroundDesktop, fontColor }}>
  .bg-card {
    display: grid;
    grid-template-rows: 1.5fr 1fr;
  }

  img {
    display: block;
    width: 100%;
    object-position: 0%;
    grid-row: 1 / 3;
    grid-column: 1 / 2;
  }

  img:last-of-type {
    display: none;
  }

  .bg-card__text {
    grid-row: 2 /3;
    grid-column: 1 / 2;
    text-align: center;
    justify-self: center;
    width: 300px;
    opacity: 0.55;
  }

  h4 {
    font-family: "Fraunces", serif;
    font-size: 1.5rem;
    font-weight: 900;
    margin-block: 2rem 1.5rem;
  }

  p {
    font-family: "Barlow", sans-serif;
    font-size: 0.9rem;
    font-weight: normal;
    line-height: 1.7;
  }
</style>
